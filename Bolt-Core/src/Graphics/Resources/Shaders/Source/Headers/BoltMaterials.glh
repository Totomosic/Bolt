struct Material2D
{
	vec4 MeshColor;
	vec4 DiffuseColor;
	vec4 SpecularHighlight;
	float Shininess;
	float ShineDamper;
	sampler2D Textures[MAX_TEXTURES_PER_MATERIAL];
};

struct MaterialCube
{
	vec4 MeshColor;
	vec4 DiffuseColor;
	vec4 SpecularHighlight;
	float Shininess;
	float ShineDamper;
	samplerCube Textures[MAX_TEXTURES_PER_MATERIAL];
};
)"